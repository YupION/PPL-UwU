<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/row_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Merk"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/row_name"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Jenis"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/row_jenis"/>

            <TextView
                android:id="@+id/row_warna"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-90dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/row_harga"
                android:text="Warna"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@+id/row_jenis"
                android:text="Id barang"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/row_id"/>

            <TextView
                android:id="@+id/row_harga"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/row_warna"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/row_id"
                android:text="Harga Sewa"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>