<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/row_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merk"
            android:textColor="@color/nliveo_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/row_name"
            android:layout_gravity="center_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Jenis"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/row_jenis"/>

            <TextView
                android:id="@+id/row_warna"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-90dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/row_harga"
                android:text="Warna"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_id"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@+id/row_jenis"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-1dp"
                android:text="Id barang"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_harga"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/row_warna"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/row_id"
                android:text="Harga Sewa"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_harga"
                android:visibility="invisible"
                android:text="deskripsi"
                android:textColor="@color/nliveo_black"
                android:id="@+id/deskripsi"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>